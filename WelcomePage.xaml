<Page x:Class="ClientApp.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Check connection:" Width="400" FontSize="20"></Label>
            <TextBox IsReadOnly="true" Text="http://localhost:5000" Name="UrlTextBox" Margin="0 5" FontSize="16"/>
            <Button Name="ConnectBtn" Content="Vefiry" Width="200" Height="40" Click="ConnectBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
